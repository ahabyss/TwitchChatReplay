$backgroundColor = #f5f5f5
$footerColor = #dedede
$footerBorderColor = #c0c0c0
$buttonBorderColor = #bda9c5
$outlineColor = #433265

*
    padding 0
    margin 0
    box-sizing border-box

    font-family 'Segoe UI', Tahoma, sans-serif
    outline-color $outlineColor

body
    display flex
    flex-direction column
    justify-content center
    align-items center

    font-size 75%

    background-color $backgroundColor

h1
    margin 0.5rem 1rem

    font-size 1.75em
    white-space nowrap


input[type=button]
    padding 0.25em
    margin 0.25rem 3rem
    outline 0

    background-color $backgroundColor
    background-size contain
    background-position center center
    background-repeat no-repeat
    border 1px solid $buttonBorderColor
    border-radius 2px

    cursor pointer

#openChatButton
    transition box-shadow .12s ease-in, background .12s ease-in
    box-shadow inset 0 0 0 1px #d8c0c0, 0 0 0 transparent
    
#openChatButton:hover
    box-shadow inset 0 0 0 1px #be5b5b, 0 0 6px -2px #be5b5b
    background #ead8d8
    
#content
    width 100%

    display flex
    flex-direction column
    align-items stretch

#content > *
    display flex
    flex-direction column
    justify-content space-around
    align-items center

#filterInfo
    margin 0.5em 0.25em

    white-space nowrap
    font-size 1.25em

#footer
    margin-top 0.5em
    padding 0.25em
    width 100%

    display flex
    align-items flex-end

    border-top 1px solid $footerBorderColor
    background-color $footerColor

#version
    font-weight lighter
    
#openSettingsButton
    margin 0
    margin-left auto
    padding 0
    width 1.8em
    height 1.8em
    border 0
    outline 0
    opacity 0.75
    background-color rgba(0, 0, 0, 0)
    background-image url('/assets/images/settings.png')