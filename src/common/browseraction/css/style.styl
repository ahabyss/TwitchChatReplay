#openChatButton

    width: 100px
    height: 30px
    font-size: 14px;

    //transition box-shadow .12s ease-in, background .12s ease-in
    //box-shadow inset 0 0 0 1px #d8c0c0, 0 0 0 transparent
    
    font-family inherit
    border none
    background none
    color inherit
    font-size 100%
    
    background #6441a4
    color white
    display inline-block
    position relative
    margin auto
    padding 0 1rem
    transition background .12s ease-in,color .12s ease-in,box-shadow .12s ease-in
    font-weight 400
    white-space nowrap
    cursor pointer
    font-size 13px
    
//#openChatButton:hover
    //box-shadow inset 0 0 0 1px #be5b5b, 0 0 6px -2px #be5b5b
    //background #ead8d8

#openChatButton:hover, #openChatButton:focus
    background #7d5bbc
    color white
    text-decoration none
    
#openChatButton:focus
    box-shadow 0 0 6px 0 #7d5bbe
    outline none
    
#openChatButton:active
    background #6441a4
    color white
    box-shadow 0 0 6px 0 #7d5bbe
    
#vlcInfo
    height 50px
    align-items center
    display grid
    padding 0 1em
    
#openDiv
    display inline-flex
    
#infoDiv
    margin 5px 10px 10px
    height 50px
    border #c1c1c1 solid 1px
    background-color: #ececec
    
#buttonDiv
    width 116px
    height 64px
    display inline-flex
    margin-right 10px

#TCRIMG
    width 64px
    height 64px
    margin-left 10px
    
#content
    width 100%

    //display flex
    //flex-direction column
