#filterInfo
    margin 0.5em 0.25em

    white-space nowrap
    font-size 1.25em

#TCRLock
    position absolute
    text-align center
    width 100px
    height 30px
    margin 17px 8px
    display grid
    align-items center
    font-size 19px
    box-shadow 0px 5px gray inset, 0px -5px gray inset
    opacity 1
    
#TCRLock.unlocked
    opacity 0
    z-index -10

#openChatButton.disabled
    opacity 0.3
    
#footer
    margin-top 0.5em
    padding 0.25em
    width 100%

    display flex
    align-items flex-end

    border-top 1px solid $footerBorderColor
    background-color $footerColor

#version
    font-weight lighter
    margin-bottom 3px
    margin-left 8px
    
#openSettingsButton
    margin 5px 8px 3px auto
    padding 0
    width 1.8em
    height 1.8em
    border 0
    outline 0
    opacity 0.75
    background-color rgba(0, 0, 0, 0)
    background-image url('/assets/images/settings.png')
    background-size contain