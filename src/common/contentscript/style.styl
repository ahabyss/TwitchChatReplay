.show 
    display block

.chat-room
    top 0px
    
.TCR-dropdown
    display inline-block
    
.TCR-ddButton    
    margin 10px!important
    margin-bottom 0px!important
    max-width 100px
    width 100px
    overflow hidden
    text-overflow ellipsis
    
.TCR-ddMenu
    display none
    position absolute
    overflow auto
    zIndex 1
    max-height 160px
    overflow-y scroll
    
.TCR-ddMenu div
    display block
    margin-left 10px
    overflow hidden
    text-overflow ellipsis
    width 100px
    max-width 100px
    white-space nowrap
    color white
    background #8a66cc
    background2 #2c2541
    padding 0 1rem
    transition background .12s ease-in,color .12s ease-in,box-shadow .12s ease-in
    cursor pointer
    
.TCR-ddMenu div:hover    
    background #9d7bde
    background2 #392e5c
    color white
    text-decoration none
    
.TCR-ddMenu div:focus
    outline none
    color white
    box-shadow 0 0 6px 0 #9d7bde
    
.TCR-ddMenu div:active
    background #8a66cc
    color white
    box-shadow 0 0 6px 0 #9d7bde
    
    
