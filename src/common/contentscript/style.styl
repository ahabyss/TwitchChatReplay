.TCR-ddMenu div:hover    
    background #9d7bde
    color white
    text-decoration none
    
.TCR-ddMenu div:focus
    outline none
    color white
    box-shadow 0 0 6px 0 #9d7bde
    
.TCR-ddMenu div:active
    background #8a66cc
    color white
    box-shadow 0 0 6px 0 #9d7bde
    
.TCR-dropdownEp
    display inline-block
    
.inactive
    opacity 0.3
        
.TCR-ddEpButton    
    margin 0px!important
    margin-bottom 0px!important
    max-width 55px
    width 55px
    overflow hidden
    text-overflow ellipsis
    user-select none
    
.TCR-ddEpMenu
    display none
    position absolute
    overflow auto
    z-Index 1
    max-height 160px
    overflow-y scroll
    user-select none
    
.TCR-ddEpMenu div
