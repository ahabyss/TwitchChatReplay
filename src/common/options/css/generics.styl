*
    margin 0
    box-sizing border-box

    font-family 'Segoe UI', Tahoma, sans-serif
    outline-color $navbarButtonOutlineColor

html
    height 100%

body
    min-height 550px
    width 600px

    display flex
    flex-direction column
    justify-content flex-start
    align-content stretch

    background-color $backgroundColor

h1
    margin-bottom 0.0em
    font-size 2em

h2
    margin-bottom 0.0em
    font-size 1.5em

h3
    margin-bottom 0.0em
    font-size 1em

strong
    font-size 1.0em

hr
    margin-top 0.75em
    margin-bottom 1em
    outline-color $disabledButtonColor

p, label
    margin-bottom 0.75em
    font-size 1.0em

label2
    margin-bottom 0.5em

blanklabel
    margin 0
    
p.condensed
    font-size 1.0em
    margin-bottom 0.25em

.inline
    display inline-flex
    flex-direction row
    align-items center

.line
    display flex
    flex-direction row
    align-items center

.floatLeft
    float left

a:link, a:active, a:visited, a:hover
    color $navbarButtonActiveColor

select
    font-size 1.0em
    border 1px solid $navbarBackgroundColor

input[type=checkbox]
    margin 0.25em
    display inline-block

    height 1.25em
    width 1.25em

input[type=radio]
    margin 0.1em 0.75em
    display inline-block

    height 1.25em
    width 1.25em

input[type=button]
    background-color $backgroundColor

    cursor pointer
    border 1px solid $navbarBackgroundColor
    border-radius 2px