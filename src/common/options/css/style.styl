@require '/properties.styl'
@require '/generics.styl'
@require '/general.styl'
@require '/about.styl'
@require '/table.styl'
@require '/tooltips.styl'

.panel
    display none
    padding-left 10px
    padding-right 10px

.optionsBody
    margin 0

.subpanel
    display none
    
#abTitle, #abAuthor
    width 100%
    text-align center
    text-decoration none
    
#abTitle
    font-size 30px
    
#tagline
    text-align center
    display block
    margin-bottom 2em
    
input[type=button].saveSettingsButton:focus
    box-shadow 0 0 6px 0 #7d5bbe
    outline none
    
input[type=button].saveSettingsButton:active
    background #6441a4
    color white
    box-shadow 0 0 6px 0 #7d5bbe
    
input[type=button].saveSettingsButton
    margin auto
    margin-top 0.5em
    padding 0.5em 1.0em

    display block
    
    font-size 1.75em
    color $backgroundColor
    background #9293aa

    outline none
    border none
    cursor pointer

    transition: 0.25s all

input[type=button].saveSettingsButton:disabled
    background-color $disabledButtonColor
    background-size contain
    background-repeat no-repeat
    background-position center center

    color rgba(0,0,0,0)
    border-color #a2a2a2

    cursor default

input[type=button].saveSettingsButton:enabled:hover, input[type=button].saveSettingsButton:enabled:focus
    border-color #000000
    background $navbarButtonActiveColor

#header
    display flex
    flex-direction column
    align-items center

    background-color $headerColor

#navbar
    background-color $navbarBackgroundColor

#navbar .navButton
    padding 0.25em 0
    width 50%

    font-size 1.75em
    color $navbarButtonTextColor
    background-color rgb(162, 162, 162)
    font-weight 500

    border none
    border-radius 0
    outline $navbarButtonOutlineColor
    cursor pointer

    transition 0.15s all

#navbar .navButton:hover, #navbar .navButton.active, #navbar .navButton:focus
    background-color $navbarButtonActiveColor

#content
    padding-top 1.5em
    padding-bottom 1.5em

    display flex
    flex-direction column
    flex-grow 1

#footer
    padding-top 1.5em

    display flex
    flex-direction column
    align-items center

    color $backgroundColor

    box-shadow 0 -3px 15px 0 $footerShadowColor
    background-color $headerColor

.socialLinks img
    height 2.5em
    width 2.5em
    margin 1.0em 0.75em

    opacity 0.75

.socialLinks img:hover, .socialLinks a:focus img
    opacity 1.0

.bodySection
    padding $bodyPadding
