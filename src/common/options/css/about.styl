.contactContainer
    width 75%
    margin-left auto
    margin-right auto
    padding 2.0em 0

    display flex
    flex-direction row
    justify-content space-between

.contactContainer a
    font-size 2.5em
    font-style italic
    text-decoration none
    opacity 0.8

img.bt
  padding 0
  box-sizing border-box
  line-height 1.3em
  letter-spacing 0px
  margin -0.5rem 0
  vertical-align baseline
  margin-left 0.5rem
  margin-right 0.5rem
    
.contactContainer a:hover
    opacity 1